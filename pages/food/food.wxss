/* pages/food/food.wxss */

.page {
  display: flex;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.category-view {
  width: 30%;
  background: #fff;
}

.category-item {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f6f6f6;
}

.selected-category-item {
  border-right: 6rpx solid #d81d6f;
}

.food-view {
  width: 70%;
  background: #fff;
  height: 1050rpx;
}

.minus {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  font-size: 14px;
  line-height: 30px;
  padding: 0;
  border: 1px solid #ccc;
  background-color: #fff;
  color: #d81d6f;
  font-weight: bold;
}

.add {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  font-size: 14px;
  line-height: 30px;
  padding: 0;
  border: 1px solid #ccc;
  background-color: #fff;
  color: #d81d6f;
  font-weight: bold;
}

.food {
  width: 70%;
  position: relative;
  top: 0;
  left: 30%;
}

.food_item {
    /* margin-top: 10px; */
    border-bottom: 1rpx solid #f6f6f6;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.name {
  font-size: 30rpx;
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.price {
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

.sales {
  /* position: absolute;
    right: 20px;
    top: 70px; */
}

.picture {
  width: 80px;
  height: 80px;
  margin-right: 20rpx;
}

/*隐藏侧边滚动条  */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*购物车  */

.cart {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fe4119;
  color: #fff;
  text-align: center;
}

.cart-main {
  height: 100rpx;
  line-height: 100rpx;
  text-align:center;

}
.count-item{
    margin: 0 40rpx;
}
.prise-text {
  width: 70%;
}

.goToOrder {
  width: 35%;
  border-left: #fff solid 2px;
}

.hide {
  display: none;
}

/*购物车列表  */

.black-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
}

.cart-list {
  position: absolute;
  bottom: 100rpx;
  background: #fff;
  width: 750rpx;
  height: 500rpx;
}

.flex-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 20rpx solid #f1f1f1;
}

.scroll-view-H {
  height: 400rpx;
}

.cart-item {
  height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.picture-icon {
  height: 65rpx;
  width: 65rpx;
  margin-right: 25rpx;
}

.price-text {
  font-size: 26rpx;
  color: #666;
}
