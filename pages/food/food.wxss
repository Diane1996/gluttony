/* pages/food/food.wxss */


.minus{
  width:30px;
  height:30px;
  border-radius:50%;
  font-size:14px;
  line-height:30px;
  padding:0;
  border:1px solid #ccc;
  background-color:#fff;
  color:#d81d6f;
  font-weight:bold;
}
.add{
  width:30px;
  height:30px;
  border-radius:50%;
  font-size:14px;
  line-height:30px;
  padding:0;
  border:1px solid #ccc;
  background-color:#fff;
  color:#d81d6f;
  font-weight:bold;  
}

.food{
  width: 70%;
  position: relative;
  top: 0;
  left: 30%;
}

.food_item{
  margin-top: 10px;
  border-top: 1px solid #aaa;
  position: relative;
  top: 0;
  left: 0;
}
.name{
  position: absolute;
  right: 20px;
  top: 10px;
}
.price{
  position: absolute;
  right: 20px;
  top: 40px;
}
.sales{
  position: absolute;
  right: 20px;
  top: 70px;
}
.picture{
  width: 80px;
  height: 80px;
}

/*隐藏侧边滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}


.cart{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  line-height: 60px;
  background: #fe4119;
  color: #fff;
  text-align: center
}
.goToOrder{
  position: absolute;
  top: 0;
  right: 0;
  width: 35%;
  border-left: #fff solid 2px; 
}
.hide{
  display: none;
}