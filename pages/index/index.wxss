/**index.wxss**/

.page {
    height: 100%;
    width: 100%;
    overflow: hidden;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.flex-item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 90rpx;
    color: #e0e0e0;
}

.userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin: 0 40rpx;
}

.background {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
