/*餐品  */
.orderList{
  position: relative;
}
.food{
  font-size: 12px;
  margin:10px 0 10px 10px;
}
.foodList{
  /* margin-top: 30px; */

}
.listItem{
  height:50px;
  line-height:50px;
  border-top:1px solid #f0f0f0;
}


.eatingType{
  height: 85px;
  position: relative;
  border-top: 5px solid #f0f0f0;
  border-bottom: 5px solid #f0f0f0;
}
.type{
  font-size: 12px;
   position: absolute;
   top: 10px;
   left: 10px; 
}
.btn{
  width: 300px;
  margin: 30px auto;
  /* position: absolute; */
  top: 30px;
}
button{
  width: 100px;
  float: left;
}
.curBtn{
  border: 1px solid #000;
}

/*点餐要求  */
.requirement{
  height:129px;
  border-bottom:5px solid #f0f0f0;

}
.requir{
  font-size: 12px;
}
.text{
  height: 50px;
  width: 75%;
  line-height: 15px;
  font-size: 15px;
  margin: 10px auto;
  overflow-y: hidden;
}
.placeholder{
  font-size: 12px;
}
.spicy{
  width: 300px;
  margin: 0px auto;
}
.spicyBtn{
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  width: 60px;
}

.total{
  width: 100%;
  height: 60px;
  line-height: 60px;
  position: fixed;
  bottom: 0px;
  left: 0px;
  background-color: #fe4119;
  color: #fff;
  text-align: center;
}
.totalPrice{
  width: 65%;
   position: absolute;
  top: 0;
  left: 0; 
}
.payment{
  position: absolute;
  top: 0;
  right: 0;
  width: 35%;
  border-left: #fff solid 2px;  
}