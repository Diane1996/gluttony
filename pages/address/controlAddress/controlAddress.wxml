<!--pages/address/controlAddress/controlAddress.wxml-->

<view class='page'>
    <view>
        <view class='flex-item input-item'>
            <view class='input-title'>联系人</view>
            <view><input class='input-box' data-name="name" bindinput="inputChange" value="{{name}}" placeholder='联系人'></input></view>
        </view>
        <view class='flex-item input-item'>
            <view class='input-title'>电话</view>
            <view><input class='input-box' data-name="phone" bindinput="inputChange" value="{{phone}}" placeholder='电话号码'></input></view>
        </view>
        <!-- <view class='flex-item input-item'>
            <view class='input-title'>位置</view>
            <view><input class='input-box' name="name" bindinput="inputChange" value="{{name}}" placeholder='联系人'></input></view>
        </view> -->
        <view class='flex-item input-item'>
            <view class='input-title'>详细地址</view>
            <view><input class='input-box' data-name="address" bindinput="inputChange" value="{{address}}" placeholder='地址信息'></input></view>
        </view>
    </view>
    <view class='confirm-btn' bindtap='setAddressItem'>确定</view>
</view>