.banner {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #f6f6f6;
  margin: 20rpx 0;
}

.flex-center {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.headImg {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 40rpx;
}

.username{
  margin-bottom: 20rpx;
}

.about {
  float: right;
  margin-right: 20px;
}

.listItem {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
  background: #fff;
}

.icon {
  width: 45rpx;
  height: 45rpx;
  padding-right: 20rpx;
}
